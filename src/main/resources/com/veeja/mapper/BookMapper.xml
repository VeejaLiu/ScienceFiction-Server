<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.veeja.mapper.BookMapper">
    <select id="selectAll" resultType="com.veeja.pojo.Book">
        select *
        from book
        <where>
            <!-- If bookName is not null, search by bookname, param3-->
            <if test="param3 != null">
                and book_name like concat('%', #{param3}, '%')
            </if>
        </where>
        <!-- Order by id -->
        order by id
        limit #{param1}, #{param2}
    </select>

    <select id="getOneById" resultType="com.veeja.pojo.Book">
        select *
        from book
        where id = #{id}
        limit 1
    </select>
</mapper>